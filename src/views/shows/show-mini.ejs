<div class="row">
    <div class="col s12">
      <div class="card light-blue darken-1" data-cy="card_body">
        <div class="card-content white-text">
          <id="card-title-name">
          <span data-cy="card_title_name" class="card-title"><%= show.name %></span>
        </id>
          <div class="row">
              <% if(show.image) { %>
              <div class="col s6" data-cy="card_content"><img src="<%= show.image.medium %>" alt=""></div>
              <% } %>
              <div class="col s6"><%- show.summary %></div>
          </div>
        </div>
        <div class="card-action light-blue darken-4">
          <a id="show_url" href="<%= show.url %>" class="white-text">URL</a></id>
          <span class="white-text">Language: <%= show.language %></span>
        </div>
      </div>
    </div>
  </div>


